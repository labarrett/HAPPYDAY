
<%= render 'header' %>

<div class ="container show">

<div class = "row">
  <div class = "col-xs-12 col-sm-8 ol-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
  <strong>Date:</strong>
  <%= @article.date %>
</div>
</div>

<div class = "row">
    <div class = "col-xs-12 col-sm-8 ol-sm-offset-2  col-md-6 col-md-offset-3">
  <strong>Title:</strong>
  <%= @article.title %>
</div>
</div>


<div class = "row">
    <div class = "col-xs-12 col-sm-8 ol-sm-offset-2 col-md-6 col-md-offset-3">
  <strong>Text:</strong>
  <%= @article.text %>
</div>
</div>

<div class ="row">
  <div class ="col-xs-12 col-sm-8 ol-sm-offset-2 col-md-6 col-md-offset-3">
<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
</div>
</div>
</div>
